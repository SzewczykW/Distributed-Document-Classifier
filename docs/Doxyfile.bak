#---------------------------------------------------------------------------
# Project settings
#---------------------------------------------------------------------------

PROJECT_NAME            = "Distributed Document Classifier"
PROJECT_BRIEF           = "MPI-based parallel document classification in C"
PROJECT_NUMBER          = "1.0"
OUTPUT_DIRECTORY        = docs
CREATE_SUBDIRS          = YES
OUTPUT_LANGUAGE         = English
OPTIMIZE_OUTPUT_FOR_C   = YES
MARKDOWN_SUPPORT        = YES
INPUT                   = include src docs/mainpage.dox
FILE_PATTERNS           = *.c *.h
RECURSIVE               = YES
EXCLUDE_PATTERNS        = */.mpich/* */build/* */tests/*
STRIP_FROM_PATH         = ../
IMAGE_PATH              = docs/img

#---------------------------------------------------------------------------
# Build configuration
#---------------------------------------------------------------------------

EXTRACT_ALL             = YES
EXTRACT_STATIC          = YES
EXTRACT_PRIVATE         = YES
EXTRACT_LOCAL_METHODS   = YES
EXTRACT_ANON_NSPACES    = NO

FULL_PATH_NAMES         = NO
INLINE_INHERITED_MEMB   = YES
SORT_MEMBER_DOCS        = YES
SORT_BRIEF_DOCS         = YES
SHOW_USED_FILES         = YES
SOURCE_BROWSER          = YES
REFERENCED_BY_RELATION  = YES
REFERENCES_RELATION     = YES
ALPHABETICAL_INDEX      = YES
SORT_GROUP_NAMES        = YES
SORT_BY_SCOPE_NAME      = YES


#---------------------------------------------------------------------------
# Diagram generation
#---------------------------------------------------------------------------

HAVE_DOT                = YES
DOT_IMAGE_FORMAT        = svg
CALL_GRAPH              = YES
CALLER_GRAPH            = YES
CLASS_DIAGRAMS          = YES
DOT_GRAPH_MAX_NODES     = 50
MAX_DOT_GRAPH_DEPTH     = 3
DOT_MULTI_TARGETS       = YES

#---------------------------------------------------------------------------
# HTML output
#---------------------------------------------------------------------------

GENERATE_HTML           = YES
HTML_OUTPUT             = html
GENERATE_TREEVIEW       = YES
GENERATE_INDEX          = YES
FULL_SIDEBAR            = YES
HTML_STYLESHEET         = docs/themes/doxygen-awesome-css/doxygen-awesome.css
HTML_EXTRA_STYLESHEET   = docs/themes/doxygen-awesome-css/doxygen-awesome-custom.css
HTML_COLORSTYLE         = DARK

#---------------------------------------------------------------------------
# LaTeX / PDF output
#---------------------------------------------------------------------------

GENERATE_LATEX          = YES
USE_PDFLATEX            = YES
LATEX_OUTPUT            = latex
LATEX_BATCHMODE         = NO
PDF_HYPERLINKS          = YES
GENERATE_RTF            = NO
GENERATE_MAN            = NO
GENERATE_XML            = NO

#---------------------------------------------------------------------------
# Preprocessing (for MPI, defines, etc.)
#---------------------------------------------------------------------------

ENABLE_PREPROCESSING    = YES
MACRO_EXPANSION         = YES
EXPAND_ONLY_PREDEF      = NO
INCLUDE_PATH            = . include
PREDEFINED              = _POSIX_C_SOURCE=200809L \
                         MPI_COMM_WORLD="..." \
                         MPI_Send(x, y, z, a, b, c)="" \
                         MPI_Recv(x, y, z, a, b, c, d)="" \
                         MPI_Init(x, y)="" \
                         MPI_Finalize()="" \
                         __attribute__(x)=

#---------------------------------------------------------------------------
# Warnings
#---------------------------------------------------------------------------

WARN_IF_UNDOCUMENTED    = YES
WARN_IF_DOC_ERROR       = YES
QUIET                   = NO
WARN_NO_PARAMDOC        = YES

